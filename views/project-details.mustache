<html>

    <head>

        <link rel="stylesheet" type="text/css" href="/../../css/styles.css" />
    </head>
    
    <body>
        <div class="singleDetailContent">
            {{#project}}
            <h1 class="singleTitle">{{name}}</h1>

            <div class="singleBox">
                <div class="detailsBox">
                    <textarea class="detailsTextArea" readonly>{{description}}</textarea>
                    <label class="detailsLabel"><p>Project Status: {{statusText}}</p></label>

        <div id='header'>
            
            <div id='logo'>
                <a href='/profile' class='profileAnchor'> <label id='mainText'>plannero</label></a>
                <label id='subText'>keeping you on track</label>
            </div>
            
            <form method="POST" action="/logout" id="logoutButtonForm">
                <button id="logoutButton">Log Out</button>
            </form>
        </div>


                    <form method="POST" action="../update-project">
                    <input type="hidden" value={{id}} name="projectId" />
                    <button class="detailsButton">Update Project?</button>
                    </form>


                    <form method="POST" action="../delete-project">
                    <input type="hidden" value={{id}} name="projectId" />
                    <button class="detailsButton" onclick="if (!confirm('Are you sure you want to delete this project?')) { return false }">Delete Project?</button>
                    </form>
                </div>

                

            </div>

            {{/project}}
        </div>

    </body>

</html>

