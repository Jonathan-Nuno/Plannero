    <body>
            <h1>Enter Project Details</h1>
            <form method="POST" action="./project-details">
            <label>Project Name<input type="text" name="projectName" placeholder="Project Name" required ></label>
            <label>Project Description<input type="text" name="projectDescription" placeholder="Project Description" required ></label>
            
            <label for="projectStatus">Choose a Status: </label>
            <select name="projectStatus" id="projectStatus">
            <option value="Plan_to_do">Plan To Do</option>
            <option value="Working_on">Working On</option>
            <option value="Completed">Completed</option>
            </select>
            <button>Submit</button>
            </form>
    </body>


