<html>

    <head>
        <link rel="stylesheet" type="text/css" href="css/styles.css" />
        <link rel="stylesheet" href="./css/profile-styles.css" />

    </head>

    <body>
    
        <div id='header'>
            
            <div id='logo'>
                <label id='mainText'>plannero</label>
                <label id='subText'>keeping you on track</label>
            </div>
            
            <form method="POST" action="/logout" id="logoutButtonForm">
                <button id="logoutButton">Log Out</button>
            </form>
        </div>

        {{! Hello User when user or Hello Gues when guest }}
        <h1>Hello, "User"!</h1>
        <a href="/profile/create-project"><button>Create Project</button></a>


        <div id="completedDiv">
            <h2> Completed Projects </h2>

            <div class="content">
                <ul>
                    {{#completedProjects}}
                    <a class="projectDetails" href= 'profile/project-details/{{id}}'><div class="card">
                    <h3>{{name}}</h3>
                    
                    <p>{{description}}</p>
                    </div></a>
                    {{/completedProjects}}
                </ul>
            </div>

            <form method="POST" action="profile/categories/Completed" class='showallForm'>
                <button class='showallButton'>Show all</button>
            </form>
        </div>

        <div id ='workingonDiv'>
            <h2> Working on </h2>

            <div class="content">
                <ul>
                    {{#workingOnProjects}}
                    <a class="projectDetails" href= 'profile/project-details/{{id}}'><div class="card">
                    <h3>{{name}}</h3>
                    
                    <p>{{description}}</p>
                    </div></a>
                    {{/workingOnProjects}}
                </ul>
            </div>
            
            <form method="POST" action="profile/categories/Working_on" class='showallForm'>
                <button class='showallButton'>Show all</button>
            </form>
        </div>

        <div id='plantodoDiv'>
            <h2> Plan to do </h2>
            <div class="content">
                <ul>
                    {{#planToDoProjects}}
                    <a class="projectDetails" href= 'profile/project-details/{{id}}'><div class="card">
                   <h3>{{name}}</h3>
                    
                    <p>{{description}}</p>
                    </div></a>
                    {{/planToDoProjects}}
                </ul>
            </div>
            
            <form method="POST" action="profile/categories/Plan_to_do" class='showallForm'>
                <button class='showallButton'>Show all</button>
            </form>
        </div>
    </body>
</html>