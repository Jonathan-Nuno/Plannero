<html>

    <head>


    <link rel="stylesheet" type="text/css" href="css/styles.css" />
    </head>

    <body>
    
    <header>
    <form method="POST" action="/logout">
    <button>Logout</button>
    </form>
    </header>

   
    <h1>Hello {{displayName}}</h1>
    <a href="/profile/create-project"><button>Create Project</button></a>
 

        <div>
            <h2> Completed Projects </h2>

            <div class="content">
                <ul>
                    {{#completedProjects}}
                    <a class="projectDetails" href= 'profile/project-details/{{id}}'><div class="card">
                    <h3>{{name}}</h3>
                    
                    <p class="profilePText">{{description}}</p>
                    </div></a>
                    {{/completedProjects}}
                </ul>
            </div>

            <form method="POST" action="profile/categories/Completed" >
            <button>Show all</button>
            </form>
        </div>

        <div>
            <h2> Working on </h2>

            <div class="content">
                <ul>
                    {{#workingOnProjects}}
                    <a class="projectDetails" href= 'profile/project-details/{{id}}'><div class="card">
                    <h3>{{name}}</h3>
                    
                    <p class="profilePText">{{description}}</p>
                    </div></a>
                    {{/workingOnProjects}}
                </ul>
            </div>
            
            <form method="POST" action="profile/categories/Working_on">
            <button>Show all</button>
            </form>
        </div>

        <div>
            <h2> Plan to do </h2>
            <div class="content">
                <ul>
                    {{#planToDoProjects}}
                    <a class="projectDetails" href= 'profile/project-details/{{id}}'><div class="card">
                   <h3>{{name}}</h3>
                    
                    <p class="profilePText">{{description}}</p>
                    </div></a>
                    {{/planToDoProjects}}
                </ul>
            </div>
            
            <form method="POST" action="profile/categories/Plan_to_do">
            <button>Show all</button>
            </form>
        </div>
        <a href="/about-us">About Us</a>
 
   </body>


</html>