    <body>
            {{#project}}
            <h1>Update Project Details</h1>
            <form method="POST" action="../profile/update-project/confirm">
            <label>Project Name<input type="text" name="projectName" value="{{name}}" required ></label>
            <label>Project Description<input type="text" name="projectDescription" value="{{description}}" required ></label>
            <p> Current Status: {{statusText}} <p>
            <label for="projectStatus">Choose a Status: </label>
            <select name="projectStatus" id="projectStatus" value='{{status}}'>
            <option value={{status}}>{{statusText}}</option>
            <option value="Working_on">Working On</option>
            <option value="Completed">Completed</option>
            <option value="Plan_to_do">Plan To Do</option>
            </select>
            <input type="hidden" name="projectId" value="{{id}}">
            <button>Submit</button>
            </form>
            {{/project}}
    </body>


</html>